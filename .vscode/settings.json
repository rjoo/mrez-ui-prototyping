{
    "css.validate": false,
    "eslint.enable": true,
    "editor.formatOnSave": true,
    "eslint.validate": [
        "javascript", 
        "javascriptreact", 
        "vue", 
        "vue-html",
        {
            "language": "vue",
            "autoFix": true
        },
    ],
    "eslint.run": "onType",
    "eslint.autoFixOnSave": true,
    "vetur.format.defaultFormatter.js": "prettier",
    // "vetur.format.defaultFormatter.html": "js-beautify-html",
    // "vetur.format.defaultFormatterOptions": {
        // "js-beautify-html": {
        //     "wrap_attributes": "force-expand-multiline"
        // }
    // },

    // relevant for 'prettier-eslint' instead of 'prettier'
    "prettier.eslintIntegration": true,
    "prettier.jsxBracketSameLine": true,
    "vetur.format.defaultFormatter.css": "prettier",
    "vetur.format.defaultFormatter.less": "prettier",
    "vetur.format.defaultFormatter.postcss": "prettier",
    "vetur.format.defaultFormatter.scss": "prettier",

    // at the time of this writing there is no stylus support by prettier
    "vetur.format.defaultFormatter.stylus": "stylus-supremacy",
    "vetur.format.defaultFormatter.ts": "prettier",
    "vetur.validation.style": true,

    // Validate vue-html in <template> using eslint-plugin-vue
    "vetur.validation.template": true,
    "vetur.format.scriptInitialIndent": true,
    "vetur.format.styleInitialIndent": true,
    
    "editor.tabSize": 4,
    "[css]":                { "editor.tabSize": 2 },
    "[scss]":               { "editor.tabSize": 2 },
    "[javascript]":         { "editor.tabSize": 4 },
    "[json]":               { "editor.tabSize": 4 },
    "[html]":               { "editor.tabSize": 4 },
    "[nunjucks]":           { "editor.tabSize": 4 },
    "[plaintext]":          { "editor.tabSize": 4 },
    "[vue]":                { "editor.tabSize": 4 },
    "[yaml]":               { "editor.tabSize": 4 },
    "[xml]":                { "editor.tabSize": 4 },
    "[xsl]":                { "editor.tabSize": 4 },
}